{
  "compilerOptions": {
    "module": "commonjs",
    "strict": false,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "target": "ES2019",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@src/*": [
        "src/*"
      ]
    },
    "lib": [
      "ES2019",
      "esnext.asynciterable"
    ],
    "types": [
      "node",
      "express",
      "multer",
      "jest"
    ]
  },
  "include": [
    "src",
    "misc",
    "test",
    "node_modules/@types/node/buffer.d.ts",
    "node_modules/@types/node/module.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.build.json"
    }
  ]
}
